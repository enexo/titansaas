<%- include('includes/header.ejs') %>

<form action="/products-entered" method="post">
    <h1 class="clientLegend">Please Enter a Product</h1>
    <div class="row">
        <div class="col-sm">
            <label for="pet-select">Type:</label>
            <select name="pets" id="pet-select">
                <option value="">--Please choose an option--</option>
                <option value="Desktop">Desktop</option>
                <option value="Laptop">Laptop</option>
                <option value="Monitor">Monitor</option>
                <option value="Hard Drive">Hard Drive</option>
                <option value="Other">Other</option>
            </select>

            <p>
                <label class="labels" for="manufacturer">Manufacturer:</label><br>
                <input class="form-rounded" type="text" name="manufacturer" id="manufacturer">
            </p>
            <p>
                <label class="labels" for="model">Model:</label><br>
                <input class="form-rounded" type="text" name="model" id="model">
            </p>
            <p>
                <label class="labels" for="serial">Serial #:</label><br>
                <input class="form-rounded" type="text" name="serial" id="serial">
            </p>
            <p>
                <label class="labels" for="size">Size:</label><br>
                <input class="form-rounded" type="text" name="size" id="size">
            </p>
            <p>
                <label class="labels" for="proc_model">Processor Model:</label><br>
                <input class="form-rounded" type="text" name="proc_model" id="proc_model">
            </p>
            <p>
                <label class="labels" for="proc_speed">Processor Speed:</label><br>
                <input class="form-rounded" type="text" name="proc_speed" id="proc_speed">
            </p>
            <p>
                <label class="labels" for="ram">RAM:</label><br>
                <input class="form-rounded" type="text" name="ram" id="ram">
            </p>
        </div>
        <div class="col-sm">
            <p>
                <label class="labels" for="hdd">Hard Drive:</label><br>
                <input class="form-rounded" type="text" name="hdd" id="hdd">
            </p>
            <p>
                <label class="labels" for="hdd_type">Hard Drive Type:</label><br>
                <input class="form-rounded" type="text" name="hdd_type" id="hdd_type">
            </p>
            <p>
                <label class="labels" for="optical">Optical:</label><br>
                <input class="form-rounded" type="text" name="optical" id="optical">
            </p>
            <p>
                <label class="labels" for="coa">COA:</label><br>
                <input class="form-rounded" type="text" name="coa" id="coa">
            </p>
            <p>
                <label class="labels" for="battery">Battery:</label><br>
                <input class="form-rounded" type="text" name="battery" id="battery">
            </p>
            <p>
                <label class="labels" for="webcam">Webcam:</label><br>
                <input class="form-rounded" type="text" name="webcam" id="webcam">
            </p>
            <p>
                <label class="labels" for="short_description">Product Description:</label><br>
                <input class="form-rounded" type="text" name="short_description" id="short_description">
            </p>
            <p>
                <label class="labels" for="comment">Comments:</label><br>
                <input class="form-rounded" type="text" name="comment" id="comment">
            </p>
            <p>
                <label class="labels" for="grade">Grade:</label><br>
                <input class="form-rounded" type="text" name="grade" id="grade">
            </p>
            <button class="" type="submit">Submit</button>
        </div>
    </div>
</form>
</div>
</div>
<%- include('includes/footer.ejs') %>